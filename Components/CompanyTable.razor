@using ClientWebApp.DTOs;
<div class="card card-body bg-light table-responsive">
    <table class="table table-hover col-12 align-middle">
        <thead>
            <tr>
                <th scope="col" class="col-1">#</th>
                <th scope="col" class="col-2">Name</th>
                <th scope="col" class="col-2">Country</th>
                <th scope="col" class="col-2">City</th>
                <th scope="col" class="col-4">UUID</th>
                <th scope="col" class="col-1"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Companies.Count; i++)
            {
                <tr>
                    <td>@(i + 1 + (PageNumber == 1 ? 0 : PageSize * (PageNumber - 1)))</td>
                    <td>@(Companies[i].Name)</td>
                    <td>@(Companies[i].Country)</td>
                    <td>@(Companies[i].City)</td>
                    <td>@(Companies[i].UUID)</td>
                    <td><a href="@Link/@Companies[i].UUID" class="btn btn-sm btn-outline-success w-100">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public string Link { get; set; }

    [Parameter]
    public List<CompanyDTO> Companies { get; set; }

    [Parameter]
    public int PageNumber { get; set; }

    [Parameter]
    public int PageSize { get; set; }
}
