@using ClientWebApp.DTOs;
<div class="card card-body bg-light table-responsive">
    <table class="table table-hover col-12 align-middle">
        <thead>
            <tr>
                <th scope="col" class="col-1">#</th>
                <th scope="col" class="col-2">Name</th>
                <th scope="col" class="col-2">Type</th>
                <th scope="col" class="col-2">EAN</th>
                <th scope="col" class="col-2">Company</th>
                <th scope="col" class="col-1">Prescription type</th>
                <th scope="col" class="col-1">ATC</th>
                <th scope="col" class="col-1"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Medicines.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@(Medicines[i].Name)</td>
                    <td>@(Medicines[i].Type)</td>
                    <td>@(Medicines[i].EAN)</td>
                    <td>@(Medicines[i].Company.Name)</td>
                    <td>@(Medicines[i].PrescriptionType)</td>
                    <td>@(Medicines[i].ATC)</td>
                    <td><a href="@Link/@Medicines[i].UUID" class="btn btn-sm btn-outline-success w-100">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public string Link { get; set; }

    [Parameter]
    public List<MedicineDTO> Medicines { get; set; }
}
