@page "/login"

<div class="d-flex flex-column col-12 vh-100 align-items-center justify-content-center">
    <h3 class="display-4">Login</h3>
    
    <EditForm Model="userAuth" OnValidSubmit="ExecuteLogin" class="container col-4">
        <div class="card card-body bg-light">
            <DataAnnotationsValidator />
            <div class="form-group row m-1">
                <InputText disabled="@IsDisabled" id="username" placeholder="Username" class="form-control" @bind-Value="userAuth.Username" />
                <ValidationMessage For="@(() => userAuth.Username)" />
            </div>
            <div class="form-group row m-1">
                <InputText type="password" disabled="@IsDisabled" id="password" placeholder="Password" class="form-control" @bind-Value="userAuth.Password" />
                <ValidationMessage For="@(() => userAuth.Password)" />
            </div>
            <div class="row m-1 mt-2">
                <button disabled="@IsDisabled" type="submit" class="btn btn-primary">
                    <div hidden="@(IsDisabled)">Login</div>
                    <div class="spinner-border spinner-border-sm" role="status" hidden="@(!IsDisabled)"/>
                    </button>
            </div>
            @if (ShowAuthError)
            {
                <div class="text-center row m-1 alert alert-danger" role="alert">
                    <h6>@Error</h6>
                </div>
            }
        </div>
    </EditForm>
</div>
